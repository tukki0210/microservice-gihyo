{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "removeComments": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "generated/**/*.d.ts"],
}
